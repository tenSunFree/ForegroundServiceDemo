<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="#f2a104"
                android:endColor="#f2a104"
                android:startColor="#f2a104"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#00743f"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="#f2a104"
                android:endColor="#f2a104"
                android:startColor="#f2a104"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#00743f"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#7000743f"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="0"
                android:centerColor="#f2a104"
                android:endColor="#f2a104"
                android:startColor="#f2a104"
                android:type="linear"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>
</selector>